                    note_num2_persist+=3
                    if(note_num2_persist>=9):
                       note_num2_persist=0
                #Triplet of triplets
                note_num3=note_num5%12
                if (note_num3==0):
                    note_num3_persist+=3
                    if(note_num3_persist>=9):
                       note_num3_persist=0
                #Triplet of triplet of triplets
                note_num4=(note_num5-12)%36
                if (note_num4==0 and octave>0):
                    note_num4_persist+=3
                    if(note_num4_persist>=9):
                       note_num4_persist=0
                if (octave>=0):
